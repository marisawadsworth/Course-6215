<Window x:Class="RGB_Slider.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RGB_Slider"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Label Content="{Binding ElementName=MySlider, Path=Value}" ContentStringFormat="{}{0:F2}" FontSize="30" />

        <Slider Name="MySlider" FontSize="30" Minimum="0" Maximum="1" Value="0.5" Margin="0, 50, 0, 0" />

        <TextBox Text="{Binding ElementName=MySlider, Path=Value, StringFormat={}{0:F2}, FallbackValue='0.00', Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontSize="30" Margin="0, 250, 0, 0" />

        <Rectangle Fill="Red" Width="100" Height="100" Opacity="{Binding ElementName=MySlider, Path=Value}" />

    </Grid>
    

</Window>
